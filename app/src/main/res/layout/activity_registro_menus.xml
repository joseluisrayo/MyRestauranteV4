<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.RegistroMenus"
   >
    <ScrollView
        android:layout_width="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:scrollbars="vertical"
            tools:context="com.adroitminds.tabbedview.Section2">
            <android.support.design.widget.AppBarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/AppTheme.AppBarOverlay">

                <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:background="?attr/colorPrimary"
                    app:popupTheme="@style/AppTheme.PopupOverlay" />

            </android.support.design.widget.AppBarLayout>

            <TextView
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="cursive"
                android:paddingTop="5dp"
                android:text="MenÃº"
                android:textColor="#111111"
                android:textSize="40dp" />
            <ImageView
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:src="@drawable/restaurant"

                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"

                        android:gravity="center_horizontal">

                        <EditText
                            android:id="@+id/entrada1"
                            android:layout_width="282dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true"
                            android:drawableStart="@drawable/breakfast"
                            android:ems="10"
                            android:hint="Entrada"
                            android:inputType="textPersonName"
                            android:textColorHint="#fc050000" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">


                        </RelativeLayout>


                    </android.support.design.widget.TextInputLayout>

                </RelativeLayout>
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:gravity="center_horizontal">

                    <EditText
                        android:id="@+id/precio"
                        android:layout_width="282dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:drawableStart="@drawable/ic_attach_money_black_24dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="166dp"
                        android:ems="10"
                        android:hint="Precio"
                        android:inputType="number" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:gravity="center_horizontal">

                    <EditText
                        android:id="@+id/cantidad"
                        android:layout_width="282dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="166dp"
                        android:ems="10"
                        android:drawableStart="@drawable/ic_exposure_black_24dp"

                        android:hint="Cantidad"
                        android:inputType="number" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"

                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:gravity="center_horizontal">
                    <EditText
                        android:id="@+id/descripcion"
                        android:layout_width="282dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:lines="4"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="166dp"
                        android:ems="10"
                        android:drawableStart="@drawable/ic_description_black_24dp"
                        android:hint="Descripcion"
                        android:inputType="textImeMultiLine" />
                </android.support.design.widget.TextInputLayout>
                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/mostrar2"
                        android:textSize="20dp"
                        android:text="Registro Plato de fondo"
                        android:layout_width="300dp"
                        android:onClick="modal"
                         android:layout_marginStart="20dp"
                        android:paddingStart="40dp"
                        android:drawableEnd="@drawable/ic_expand_more_black_24dp"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ocultar"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"

                            android:gravity="center_horizontal">

                            <EditText
                                android:id="@+id/Segundo"
                                android:layout_width="282dp"
                                android:visibility="gone"
                                android:layout_height="wrap_content"
                                android:layout_alignParentTop="true"
                                android:layout_centerHorizontal="true"
                                android:drawableStart="@drawable/breakfast"
                                android:ems="10"
                                android:hint="Segundo"
                                android:inputType="textPersonName"
                                android:textColorHint="#fc050000" />


                        </android.support.design.widget.TextInputLayout>

                    </RelativeLayout>
                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:gravity="center_horizontal">

                        <EditText
                            android:id="@+id/precio1"
                            android:layout_width="282dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:drawableStart="@drawable/ic_attach_money_black_24dp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="166dp"
                            android:ems="10"
                            android:visibility="gone"
                            android:hint="Precio"
                            android:inputType="number" />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:gravity="center_horizontal">

                        <EditText
                            android:id="@+id/cantida1"
                            android:layout_width="282dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="166dp"
                            android:visibility="gone"
                            android:ems="10"
                            android:drawableStart="@drawable/ic_exposure_black_24dp"

                            android:hint="Cantidad"
                            android:inputType="number" />


                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:gravity="center_horizontal">

                    <EditText
                        android:id="@+id/descripcion1"
                        android:layout_width="282dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="166dp"
                        android:visibility="gone"
                        android:ems="10"
                        android:drawableStart="@drawable/ic_exposure_black_24dp"
                        android:hint="Descripccion"
                        android:inputType="textImeMultiLine" />


                    </android.support.design.widget.TextInputLayout>
                    <LinearLayout
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/mostrar1"
                            android:textSize="20dp"
                            android:text="Registro Postres"
                            android:layout_width="300dp"
                            android:layout_marginStart="20dp"
                            android:paddingStart="40dp"
                            android:drawableEnd="@drawable/ic_expand_more_black_24dp"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fotos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
       android:layout_marginRight="15dp"
        android:layout_marginBottom="450dp"

        app:srcCompat="@android:drawable/ic_menu_camera" />



</android.support.design.widget.CoordinatorLayout>