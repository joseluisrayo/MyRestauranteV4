<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:scrollbars="vertical"
        tools:context="com.adroitminds.tabbedview.Section2">
        <LinearLayout
            android:layout_marginStart="110dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="cursive"
                android:paddingTop="5dp"
                android:text="Bebidas"
                android:textColor="#111111"
                android:textSize="45dp" />

            <ImageView
                android:id="@+id/infoEntrada3"
                android:layout_marginStart="60dp"
                android:layout_marginTop="15dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_info_outline_black_24dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="14dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:gravity="center_horizontal">

                    <EditText
                        android:id="@+id/nombre"
                        android:layout_width="282dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:drawableStart="@drawable/breakfast"
                        android:ems="10"
                        android:hint="Nombre"
                        android:inputType="textPersonName"
                        android:textColorHint="#fc050000" />
                </android.support.design.widget.TextInputLayout>

            </RelativeLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:gravity="center_horizontal">

                <EditText
                    android:id="@+id/bebidaprecio"
                    android:layout_width="282dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:drawableStart="@drawable/ic_attach_money_black_24dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="166dp"
                    android:ems="10"
                    android:hint="Precio"
                    android:inputType="number" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:gravity="center_horizontal">
                <EditText
                    android:id="@+id/comentariobebida"
                    android:layout_width="282dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:lines="4"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:ems="10"
                    android:drawableStart="@drawable/ic_description_black_24dp"
                    android:hint="Descripcion"
                    android:inputType="textImeMultiLine" />
            </android.support.design.widget.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Spinner
                    android:id="@+id/categoria"
                    android:layout_width="300dp"
                    android:layout_marginStart="30dp"
                    android:layout_height="wrap_content"></Spinner>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/fotobebida"
                android:layout_marginTop="1dp"
                android:layout_width="100dp"
                android:layout_marginStart="100dp"
                android:src="@drawable/img_base"
                android:layout_height="100dp" />
            <Button
                android:id="@+id/registrar1"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="1dp"
                android:layout_gravity="center_horizontal"
                android:backgroundTint="@color/LightGreen"
                android:text="Registrar"
                android:textColor="#ffffff" />
        </LinearLayout>

    </LinearLayout>

</ScrollView>