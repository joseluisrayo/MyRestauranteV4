<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.RegistroMenu1"
    >

    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:layout_height="wrap_content">
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="vertical"
            android:scrollbars="vertical"
            tools:context="com.adroitminds.tabbedview.Section2">

            <TextView
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="cursive"
                android:paddingTop="5dp"
                android:text="MenÃº"
                android:textColor="#111111"
                android:textSize="50dp" />
            <ImageView
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:src="@drawable/restaurant"

                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"

                        android:gravity="center_horizontal">

                        <EditText
                            android:id="@+id/entrada1"
                            android:layout_width="282dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true"
                            android:drawableStart="@drawable/breakfast"
                            android:ems="10"
                            android:hint="PLATOS EXTRAS"
                            android:inputType="textPersonName"
                            android:textColorHint="#fc050000" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">


                        </RelativeLayout>


                    </android.support.design.widget.TextInputLayout>

                </RelativeLayout>
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:gravity="center_horizontal">

                    <EditText
                        android:id="@+id/sada"
                        android:layout_width="282dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:drawableStart="@drawable/ic_attach_money_black_24dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="166dp"
                        android:ems="10"
                        android:hint="Precio"
                        android:inputType="number" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:gravity="center_horizontal">

                    <EditText
                        android:id="@+id/tel"
                        android:layout_width="282dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="166dp"
                        android:ems="10"
                        android:drawableStart="@drawable/ic_phone_black_24dp"

                        android:hint="Cantidad"
                        android:inputType="number" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:gravity="center_horizontal">
                    <EditText
                        android:id="@+id/comentario"
                        android:layout_width="282dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:lines="4"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="166dp"
                        android:ems="10"
                        android:drawableStart="@drawable/ic_description_black_24dp"
                        android:hint="Descripcion"
                        android:inputType="textImeMultiLine" />
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>
            <LinearLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/dss"
                    android:layout_marginTop="5dp"
                    android:layout_width="100dp"
                    android:src="@drawable/img_base"
                    android:layout_height="100dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">


            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>