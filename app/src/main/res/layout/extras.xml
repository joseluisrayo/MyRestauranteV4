<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.RegistroMenu1">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:scrollbars="vertical"
            tools:context="com.adroitminds.tabbedview.Section2">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="119dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="cursive"
                    android:paddingTop="5dp"
                    android:text="Extras"
                    android:textColor="#111111"
                    android:textSize="45dp" />

                <ImageView
                    android:id="@+id/infoEntrada4"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="75dp"
                    android:layout_marginTop="15dp"
                    android:src="@drawable/ic_info_outline_black_24dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:gravity="center_horizontal">

                        <EditText
                            android:id="@+id/extras"
                            android:layout_width="282dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true"
                            android:drawableStart="@drawable/breakfast"
                            android:ems="10"
                            android:hint="Platos extras"
                            android:inputType="textPersonName"
                            android:textColorHint="#fc050000" />

                    </android.support.design.widget.TextInputLayout>
                </RelativeLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:gravity="center_horizontal">

                    <EditText
                        android:id="@+id/precioextras"
                        android:layout_width="282dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:drawableStart="@drawable/ic_attach_money_black_24dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="166dp"
                        android:ems="10"
                        android:hint="Precio"
                        android:inputType="number" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:gravity="center_horizontal">

                    <EditText
                        android:id="@+id/comentario"
                        android:layout_width="282dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:lines="4"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="166dp"
                        android:ems="10"
                        android:drawableStart="@drawable/ic_description_black_24dp"
                        android:hint="Descripcion"
                        android:inputType="textImeMultiLine" />
                </android.support.design.widget.TextInputLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <Spinner
                        android:id="@+id/diaReg4"
                        android:layout_width="300dp"
                        android:layout_marginStart="30dp"
                        android:layout_height="wrap_content">

                    </Spinner>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/fotoextra"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="99dp"
                    android:layout_width="100dp"
                    android:src="@drawable/img_base"
                    android:layout_height="100dp" />
                <Button
                    android:id="@+id/regisextras"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:backgroundTint="@color/LightGreen"
                    android:text="Registrar"
                    android:textColor="#ffffff" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</android.support.design.widget.CoordinatorLayout>
