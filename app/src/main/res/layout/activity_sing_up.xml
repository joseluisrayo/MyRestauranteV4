<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".View.SingUpActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="160dp">
            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="REGISTER"
                android:layout_gravity="center_horizontal"
                android:textColor="#fff"
                android:textSize="20dp"/>

            <ImageView
                android:id="@+id/signupFotoPerfil"
                android:layout_marginTop="20dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/iconoperfi"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:weightSum="3"
            android:layout_height="390dp">

            <EditText
                android:id="@+id/signupNombre"
                android:drawableStart="@drawable/ic_person_black_24dp"
                android:textColor="#fff"
                android:textColorHint="@color/lightgray"
                android:layout_gravity="center"
                android:hint="Nombre Completo"
                android:padding="7dp"
                android:inputType="text"
                android:layout_width="300dp"
                android:layout_height="wrap_content" />
            <EditText
                android:layout_marginTop="25dp"
                android:id="@+id/signupApellido"
                android:drawableStart="@drawable/ic_person_black_24dp"
                android:textColor="#fff"
                android:textColorHint="@color/lightgray"
                android:layout_gravity="center"
                android:hint="Apellido completo"
                android:padding="7dp"
                android:inputType="text"
                android:layout_width="300dp"
                android:layout_height="wrap_content" />

            <EditText
                android:layout_marginTop="25dp"
                android:id="@+id/signupUser"
                android:drawableStart="@drawable/ic_person_black_24dp"
                android:textColor="#fff"
                android:textColorHint="@color/lightgray"
                android:layout_gravity="center"
                android:hint="name@example.com"
                android:padding="7dp"
                android:inputType="textEmailAddress"
                android:layout_width="300dp"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/SignupPass1"
                android:drawableStart="@drawable/ic_lock_black_24dp"
                android:textColor="#fff"
                android:textColorHint="@color/lightgray"
                android:layout_marginTop="25dp"
                android:hint="Password"
                android:padding="10dp"
                android:inputType="textPassword"
                android:layout_gravity="center"
                android:layout_width="300dp"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/SignupPass2"
                android:drawableStart="@drawable/ic_lock_black_24dp"
                android:textColor="#fff"
                android:textColorHint="@color/lightgray"
                android:layout_marginTop="25dp"
                android:hint="Confirmar Password"
                android:padding="10dp"
                android:inputType="textPassword"
                android:layout_gravity="center"
                android:layout_width="300dp"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btnRegis"
                android:background="@color/common_google_signin_btn_text_dark_default"
                android:layout_marginTop="20dp"
                android:layout_width="300dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="RegÃ­strate"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>